<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/container_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="#E67259"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stephany"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="3dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_add_avatar" />

            </FrameLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="178dp"
                android:background="@drawable/rounded_data_filling"
                android:gravity="top|center_horizontal"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="30dp">

                <EditText
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/roboto"
                    android:padding="15dp"
                    android:text="Khassen"
                    android:textColor="#232323"
                    android:textColorHint="#C4C4C4"
                    android:textSize="14sp"
                    android:theme="@style/CustomEditText"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="15dp"
                    android:id="@+id/icon_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintEnd_toEndOf="@id/last_name"
                    app:layout_constraintTop_toTopOf="@id/last_name"
                    app:layout_constraintBottom_toBottomOf="@id/last_name"/>

                <EditText

                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/ic_smile"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/roboto"
                    android:padding="15dp"
                    android:text="Taiyr"
                    android:textColor="#232323"
                    android:textColorHint="#C4C4C4"
                    android:textSize="14sp"
                    android:theme="@style/CustomEditText"
                    app:layout_constraintTop_toBottomOf="@id/last_name" />

                <ImageView
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="15dp"
                    android:id="@+id/icon_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintEnd_toEndOf="@id/first_name"
                    app:layout_constraintTop_toTopOf="@id/first_name"
                    app:layout_constraintBottom_toBottomOf="@id/first_name"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/roboto"
                    android:padding="15dp"
                    android:text="Almaty"
                    android:textColor="#232323"
                    android:textColorHint="#C4C4C4"
                    android:textSize="14sp"
                    android:theme="@style/CustomEditText"
                    app:layout_constraintTop_toBottomOf="@id/first_name" />

                <ImageView
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="15dp"
                    android:id="@+id/icon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintEnd_toEndOf="@id/address"
                    app:layout_constraintTop_toTopOf="@id/address"
                    app:layout_constraintBottom_toBottomOf="@id/address"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/roboto"
                    android:inputType="number"
                    android:padding="15dp"
                    android:text="+7 708 964 28 81"
                    android:textColor="#232323"
                    android:textColorHint="#C4C4C4"
                    android:textSize="14sp"
                    android:theme="@style/CustomEditText"
                    app:layout_constraintTop_toBottomOf="@id/address" />


                <ImageView
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="15dp"
                    android:id="@+id/icon_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintEnd_toEndOf="@id/phone_number"
                    app:layout_constraintTop_toTopOf="@id/phone_number"
                    app:layout_constraintBottom_toBottomOf="@id/phone_number"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/text_all_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto"
            android:text="История заказов"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_data" />

        <TextView
            android:id="@+id/check_all_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:text="Посмотреть все >"
            android:textColor="#3092EC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_data" />

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_all_orders"
            android:layout_marginBottom="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>